source 'https://rubygems.org'

gem 'rails', '4.0.0'
gem 'pg', '0.15.1'

group :development, :test do
  gem 'rspec-rails'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier', '1.2.3'
end

gem 'turbolinks'

gem 'jquery-rails'

group :test do
  gem 'capybara'
end